<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestEase.Views.ModbusViews.RegisterTable"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">
    <Grid Margin="20"
          RowDefinitions="Auto,Auto,*">
        <Label 
            Grid.Row="0"
            Text="Register Table"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout Grid.Row="1" Orientation="Horizontal" Spacing="10">
            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                <RadioButton x:Name="DiscreteInputsRadioButton"
                             GroupName="RegisterGroup"
                             CheckedChanged="RadioButton_CheckedChanged"/>
                <Label Text="Discrete Inputs" HorizontalOptions="CenterAndExpand" />
            </StackLayout>

            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                <RadioButton x:Name="CoilsRadioButton"
                             GroupName="RegisterGroup"
                             CheckedChanged="RadioButton_CheckedChanged"/>
                <Label Text="Coils" HorizontalOptions="CenterAndExpand" />
            </StackLayout>

            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                <RadioButton x:Name="InputRegistersRadioButton"
                             GroupName="RegisterGroup"
                             CheckedChanged="RadioButton_CheckedChanged"/>
                <Label Text="Input Registers" HorizontalOptions="CenterAndExpand" />
            </StackLayout>

            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                <RadioButton x:Name="HoldingRegistersRadioButton"
                             GroupName="RegisterGroup"
                             CheckedChanged="RadioButton_CheckedChanged"/>
                <Label Text="Holding Registers" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>

        <ScrollView Grid.Row="2">
            <material:DataGrid ItemsSource="{Binding HoldingItems}" 
                               UseAutoColumns="True" 
                               VerticalOptions="Center"
                               BackgroundColor="DarkBlue" />
        </ScrollView>
    </Grid>
</ContentView>
